<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginBottom="2dp"
  android:background="#0CD1D1D1"
  android:gravity="center_vertical"
  android:orientation="horizontal"
  android:padding="8dp">

  <ImageView
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:scaleType="fitCenter"
    android:src="@drawable/ic_baseline_insert_drive_file_24"
    tools:ignore="ContentDescription" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10sp"
    android:orientation="vertical">

    <TextView
      android:id="@+id/recyclerExplorerFileNameText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/file_name_placeholder"
      android:textColor="@color/white"
      android:textSize="15sp"
      android:textStyle="bold" />

    <TextView
      android:id="@+id/recyclerExplorerLastModifiedText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/file_date_placeholder"
      android:textColor="@color/garmin_text_white"
      android:textSize="11sp" />
  </LinearLayout>
</LinearLayout>